@model IEnumerable<e_commerce.Models.Commande>

@{
    ViewData["Title"] = "MesCommandes";
}

<h1>MesCommandes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateCommande)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstPayee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstLivree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Utilisateur)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateCommande)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstPayee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstLivree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Utilisateur.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CommandeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CommandeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CommandeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
